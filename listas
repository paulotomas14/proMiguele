/*HEADER*/


typedef int ITEM_TYPE;
typedef struct lnode *List;
typedef struct lnode{
    ITEM_TYPE info;
    List next;
}List_node;




List cria_lista (void);
void insere_lista (List lista, ITEM_TYPE it);
void procura_lista (List lista, ITEM_TYPE chave, List *ant, List*actual);
void imprime_lista (List lista);
List destroi_lista (List lista);
int lista_vazia(List lista);
int lista_cheia (List lista);
List pesquisa_lista (List lista, ITEM_TYPE it);
void imprime_contrario (List lista);
List max_lista(List lista);
List min_lista(List lista);



/*LISTAS*/


#include <stdio.h>
#include <stdlib.h>

#include "header.h"

#include "header.h"


List max_lista(List lista){
    List act,maior;
    if(lista_vazia(lista))
        return NULL;
    act = lista->next;
    maior= act;
    while(act->next){
        act=act->next;
        if ((act->info)>(maior->info))
            maior=act;
    }
    return maior;
}

List min_lista(List lista){
    List act,menor;
    if(lista_vazia(lista))
        return NULL;
    act = lista->next;
    menor= act;
    while(act->next){
        act=act->next;
        if ((act->info)<(menor->info))
            menor=act;
    }
    return menor;
}

void imprime_contrario (List lista)
{
    if (lista->next == NULL)
        printf ("%d ", lista->info);
    else
    {
        imprime_contrario (lista->next);
        printf("%d ", lista->info);
    }
}

List pesquisa_lista (List lista, ITEM_TYPE it)
{
    List ant;
    List actual;
    procura_lista (lista, it, &ant, &actual);
    return (actual);
}

void elimina_lista (List lista, ITEM_TYPE it)
{
    List ant;
    List actual;
    procura_lista (lista, it, &ant, &actual);
    if (actual != NULL)
    {
        ant->next = actual->next;
        free (actual);
    }
}


int lista_cheia (List lista)
{
return 0;
}




List cria_lista (void)
{
    List aux;
    aux = (List) malloc (sizeof (List_node));
    if (aux != NULL) {
        aux->info = 0;
        aux->next = NULL;
    }
    return aux;
}



void insere_lista (List lista, ITEM_TYPE it)
{
    List no;
    List ant, inutil;
    no = (List) malloc (sizeof (List_node));
    if (no != NULL) {
        no->info = it;
        procura_lista (lista, it, &ant, &inutil);
        no->next = ant->next;
        ant->next = no;
    }
}


void procura_lista (List lista, ITEM_TYPE chave, List *ant, List*actual)
{
    *ant = lista; *actual = lista->next;
    while ((*actual) != NULL && (*actual)->info < chave)
    {
        *ant = *actual;
        *actual = (*actual)->next;
    }
    if ((*actual) != NULL && (*actual)->info != chave)
        *actual = NULL; /* Se elemento nÃ£o encontrado*/
}



void imprime_lista (List lista)
{
    List l = lista->next; /* Salta o header */
    while (l)
    {
        printf("%d ", l->info);
        l=l->next;
    }
}


List destroi_lista (List lista)
{
    List temp_ptr;
    while (lista_vazia (lista) == 0)
    {
        temp_ptr = lista;
        lista= lista->next;
        free (temp_ptr);
    }
    free(lista);
    return NULL;
}


int lista_vazia(List lista)
{
return (lista->next == NULL ? 1 : 0);
}

